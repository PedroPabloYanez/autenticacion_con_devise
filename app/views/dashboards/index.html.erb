<div class="row">
  <div class="col-xs-8 col-sm-10 col-md-10">
    <h1>Dashboard</h1>
  </div>
 
</div>

<div class="row">
    
        <div class="col-sm-6 col-md-4">
     
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Email</th>
                        <th scope="col" colspan="3"></th>
                    </tr> 
                </thead>
                <tbody>
                    <%  @users.each do |user|%>
                        <tr>
                            <td><%= user.name  %></td>
                            <td><%= user.email  %></td>
                            <td><%= link_to user.admin, users_path(user), method: :patch %></td>
                            <td><%#= link_to 'Mostrar', user %></td>
                            <td><%#= link_to 'Borrar', user, method: :delete, data: {confirm: '¿Estás seguro?'} %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        
         </div>
    
</div>


<br>